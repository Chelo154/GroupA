@model GroupA.Dominio.Proyecto

@{
    ViewBag.Title = "Details";
}
<!--
Dentro de esta pagina en el ViewBag recibis
    ViewBag.Empleados = Recibis los empleados que forman parte del proyecto 
-->
<h2 class="text-center">Detalles de Proyecto</h2>

<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BorradoLogico)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BorradoLogico)
        </dd>

    </dl>
    @foreach (GroupA.Dominio.Empleado a in ViewBag.Empleados)
    {
        @a.Apellido;
        @a.Nombre;
        @Html.ActionLink("Mas Informacion", "../Empleados/Details", new { id = a.Id });


    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
